import tkinter as tk

def show_info():
    label.config(text="Josiah Phillips\n23280 Grandview Way\nLakeville, MN")

root = tk.Tk()
root.title("Program #2")
root.geometry("350x200")

label = tk.Label(root, text="", font=("Helvetica", 14), justify="center")
label.pack(pady=20)

btn_show = tk.Button(root, text="Show Info", command=show_info)
btn_show.pack(pady=5)

btn_quit = tk.Button(root, text="Quit", command=root.destroy)
btn_quit.pack(pady=5)

root.mainloop()
